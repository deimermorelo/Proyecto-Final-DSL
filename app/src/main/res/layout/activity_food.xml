<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity">

    <ImageView
        android:id="@+id/image_food"
        android:layout_width="240dp"
        android:layout_height="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@drawable/rollos_primavera" />

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_food"
        android:paddingHorizontal="20dp"
        android:text="Nombre"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_precio"
        android:layout_below="@+id/tv_nombre"
        android:paddingHorizontal="20dp"
        android:text="Precio"
        android:textSize="24sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_precio"
        android:layout_marginVertical="30dp"
        android:padding="10dp"
        android:gravity="center">

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_agg_carrito"
            android:layout_marginHorizontal="5dp"
            android:text="Agregar a Carrito" />

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/btn_ver_carrito"
            android:layout_marginHorizontal="5dp"
            android:text="Ver Carrito" />

    </LinearLayout>

</RelativeLayout>