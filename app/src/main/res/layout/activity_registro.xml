<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_registro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/tv_registro"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_registro1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_registro"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:hint="Nombre"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_registro2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_registro1"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:hint="Apellido"
                android:inputType="text"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_registro3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_registro2"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:hint="Cédula"
                android:inputType="number"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_registro4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_registro3"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/et_registro5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_registro4"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:minHeight="48dp" />

            <Button
                android:id="@+id/btn_registrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_registro5"
                android:layout_marginHorizontal="100dp"
                android:layout_marginVertical="30dp"
                android:gravity="center"
                android:text="@string/btn_registrar" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>